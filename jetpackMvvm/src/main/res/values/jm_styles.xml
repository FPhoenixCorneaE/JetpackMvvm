<resources>

    <style name="UiStateView" />

    <style name="UiStateView.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/jm_color_0x333333</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="UiStateView.SubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/jm_color_0x666666</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/jm_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/jm_dialog_exit</item>
    </style>
</resources>
