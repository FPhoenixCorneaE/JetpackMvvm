<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivNoNetwork"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:contentDescription="@null"
        android:src="@mipmap/jm_ic_no_network" />

    <TextView
        android:id="@+id/tvNoNetwork"
        style="@style/UiStateView.Title"
        android:layout_marginTop="12dp"
        android:text="@string/jm_string_ui_state_no_network_text" />

    <TextView
        android:id="@+id/tvRetry"
        style="@style/UiStateView.SubTitle"
        android:layout_marginTop="12dp"
        android:text="@string/jm_string_ui_state_no_network_retry_text" />
</LinearLayout>