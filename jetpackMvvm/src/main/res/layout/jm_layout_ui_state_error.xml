<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llError"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jm_color_bg_0xf5f5f5"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivError"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvError"
        style="@style/UiStateView.Title"
        android:layout_marginTop="12dp"
        android:text="@string/jm_string_ui_state_error_text" />

    <TextView
        android:id="@+id/tvRetry"
        style="@style/UiStateView.SubTitle"
        android:layout_marginTop="12dp"
        android:text="@string/jm_string_ui_state_error_retry_text" />
</LinearLayout>